# Docker Compose Environment Variables
# Copy this file to .env and modify values as needed

# Database Configuration
DATABASE_URL=postgresql://radar_user:radar_pass_dev@db:5432/radar_db
POSTGRES_DB=radar_db
POSTGRES_USER=radar_user
POSTGRES_PASSWORD=radar_pass_dev

# Django Configuration
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Frontend drawing feature flags (safe fallbacks)
# Toggle enhanced drawing tools (Circle/Sector, simplification). 1=on, 0=off
RADAR_ENHANCED_DRAWING=1
# Default circle radius (meters) used for quick coverage
RADAR_DEFAULT_RADIUS_M=75
# Base width (meters) for trapezoid sector tool bottom side
RADAR_SECTOR_BASE_WIDTH_M=20
# Optional server-side default circle when no polygon is provided (non-GIS only)
# Disabled by default to preserve existing behavior
RADAR_ALLOW_DEFAULT_CIRCLE=0
# Increment to bust browser caches for frontend JS/CSS
RADAR_FRONTEND_ASSET_VERSION=20240916b
# Increment to bust browser caches for frontend JS/CSS
RADAR_FRONTEND_ASSET_VERSION=20240916a

# Routing Service Configuration
ROUTING_PROVIDER=osrm
ROUTING_BASE_URL=http://osrm:5000

# OSRM Map Region Configuration
# Available options: monaco, liechtenstein, andorra, malta, us, uk, germany, france, spain
# Default: monaco (smallest for testing)
OSRM_REGION=monaco

# For production, set these values:
# DEBUG=0
# DJANGO_SECRET_KEY=your-very-secure-secret-key-here
# DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# POSTGRES_PASSWORD=your-secure-database-password
